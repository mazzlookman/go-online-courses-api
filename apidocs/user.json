{
  "openapi": "3.0.3",
  "info": {
    "title": "API Documentation of PZN Website Clone",
    "description": "This is APIs Documentation of cloning website https://kelas.programmerzamannow.com/",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:2802/api/v1"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": ["User Endpoints"],
        "summary": "Register User Endpoint",
        "description": "This is user endpoint for register a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true,
                    "example": "Bella Rizky Kharisma"
                  },
                  "email": {
                    "type": "string",
                    "required": true,
                    "example": "bella@example.com"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "example": "bella123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response (avatar and token fields is empty)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseSuccess"
                  }
                }
              }
            },
          "400": {
            "description": "Error response if request body not as required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
          }
        },
      "get": {
        "security": [{
          "UserAuth": []
        }],
        "tags": ["User Endpoints"],
        "summary": "Get Detail of User Profile",
        "description": "This is an endpoint for get detail of user profile",
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseSuccess"
                }
              }
            }
          },
          "404": {
            "description": "Error response if user not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      }
      },
    "/users/login": {
      "post": {
        "tags": ["User Endpoints"],
        "summary": "Login User Endpoint",
        "description": "This is an endpoint for login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string",
                    "required": true,
                    "example": "bella@example.com"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "example": "bella123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponseSuccess"
                }
              }
            }
          },
          "400": {
            "description": "Error response if request body not as required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      }
    },
    "/users/avatars": {
      "put": {
        "security": [{
          "UserAuth": []
        }],
        "tags": ["User Endpoints"],
        "summary": "Upload Avatar's User Endpoint",
        "description": "This is an endpoint for upload avatar's user",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "example": "bella.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "Your avatar has been uploaded"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "string",
                          "example": "Bella Rizky Kharisma"
                        },
                        "avatar": {
                          "type": "string",
                          "example": "assets/images/avatars/bella.png"
                        },
                        "is_uploaded": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Error response if invalid authorization token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "security": [{
          "UserAuth": []
        }],
        "tags": ["User Endpoints"],
        "summary": "User Logout Endpoint",
        "description": "This is endpoint for user logout",
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "You're successfully logged out"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "string",
                          "example": "Bella Rizky Kharisma"
                        },
                        "token": {
                          "type": "string",
                          "required": null,
                          "example": ""
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Error response if invalid authorization token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    }
    },
  "components": {
    "securitySchemes": {
      "UserAuth": {
        "description": "Authentication for user endpoints",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserResponseSuccess": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 200
          },
          "status": {
            "type": "string",
            "example": "OK"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": 1
              },
              "name": {
                "type": "string",
                "example": "Bella Rizky Kharisma"
              },
              "email": {
                "type": "string",
                "example": "bella@example.com"
              },
              "avatar": {
                "type": "string",
                "required": null,
                "example": "assets/images/avatars/bella.png"
              },
              "token": {
                "type": "string",
                "required": null,
                "example": "this.jwt.token"
              }
            }
          }
        }
      },
      "BadRequestError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 400
          },
          "status": {
            "type": "string",
            "example": "Bad Request"
          },
          "data": {
            "type": "object",
            "properties": {
              "errors": {
                "type": "string",
                "example": "bad request error message"
              }
            }
          }
        }
      },
      "UnauthorizedError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 401
          },
          "status": {
            "type": "string",
            "example": "Unauthorized"
          },
          "data": {
            "type": "object",
            "properties": {
              "errors": {
                "type": "string",
                "example": "unauthorized error message"
              }
            }
          }
        }
      },
      "NotFoundError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 404
          },
          "status": {
            "type": "string",
            "example": "Not Found"
          },
          "data": {
            "type": "object",
            "properties": {
              "errors": {
                "type": "string",
                "example": "not found error message"
              }
            }
          }
        }
      }
    }
  }
}
