{
  "openapi": "3.0.3",
  "info": {
    "title": "API Documentation of Online Course Website",
    "description": "This is API documentation of the online course website created using Go-Lang. There are 7 groups of endpoints in this api documentation, including: (1) user endpoints, (2) author endpoints, (3) category endpoints, (4) course endpoints, (5) lesson-title endpoints, (6) lesson-content endpoints, and (7) transaction endpoints.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:2802/api/v1"
    }
  ],
  "paths": {
    "/authors": {
      "post": {
        "tags": ["Author Endpoints"],
        "summary": "Author Register Endpoint",
        "description": "This endpoint is used to author registration",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "profile"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Bella Rizky Kharisma"
                  },
                  "email": {
                    "type": "string",
                    "example": "bella@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "bella123"
                  },
                  "profile": {
                    "type": "string",
                    "example": "This is profile"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response (token is empty)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthorResponseSuccess"
                }
              }
            }
          },
          "400": {
            "description": "Error response if request body not as required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      }
    },
    "/authors/login": {
      "post": {
        "tags": ["Author Endpoints"],
        "summary": "Author Login Endpoint",
        "description": "This endpoint is used for author login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email","password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "bella@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "bella123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthorResponseSuccess"
                }
              }
            }
          },
          "400": {
            "description": "Error response if request body not as required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestError"
                }
              }
            }
          }
        }
      }
    },
    "/authors/avatars": {
      "put": {
        "security": [{
          "AuthorAuth": []
        }],
        "tags": ["Author Endpoints"],
        "summary": "Upload Avatar's Author Endpoint",
        "description": "This endpoint is used for upload avatar's author",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["avatar"],
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary",
                    "example": "bella.png"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "Your avatar has been uploaded"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "string",
                          "example": "Bella Rizky Kharisma"
                        },
                        "avatar": {
                          "type": "string",
                          "example": "assets/images/avatars/bella.png"
                        },
                        "is_uploaded": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Error response if invalid authorization token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    },
    "/authors/logout": {
      "post": {
        "security": [{
          "AuthorAuth": []
        }],
        "tags": ["Author Endpoints"],
        "summary": "Author Logout Endpoint",
        "description": "This endpoint is used for author logout",
        "responses": {
          "200": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "You're successfully logged out"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "author": {
                          "type": "string",
                          "example": "Bella Rizky Kharisma"
                        },
                        "token": {
                          "type": "string",
                          "example": ""
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Error response if invalid authorization token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "AuthorAuth": {
        "description": "Authentication for author endpoints",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "AuthorResponseSuccess": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 200
          },
          "status": {
            "type": "string",
            "example": "OK"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": 1
              },
              "name": {
                "type": "string",
                "example": "Bella Rizky Kharisma"
              },
              "email": {
                "type": "string",
                "example": "bella@example.com"
              },
              "profile": {
                "type": "string",
                "example": "This is profile"
              },
              "avatar": {
                "type": "string",
                "example": "assets/images/avatars/bella.png"
              },
              "token": {
                "type": "string",
                "example": "this.jwt.token"
              }
            }
          }
        }
      },
      "BadRequestError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 400
          },
          "status": {
            "type": "string",
            "example": "Bad Request"
          },
          "data": {
            "type": "object",
            "properties": {
              "errors": {
                "type": "string",
                "example": "bad request error message"
              }
            }
          }
        }
      },
      "UnauthorizedError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "example": 401
          },
          "status": {
            "type": "string",
            "example": "Unauthorized"
          },
          "data": {
            "type": "object",
            "properties": {
              "errors": {
                "type": "string",
                "example": "unauthorized error message"
              }
            }
          }
        }
      }
    }
  }
}